{
  "name": "neuromail",
  "version": 2,
  "public": true,
  "github": {
    "silent": true
  },
  "builds": [
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { 
      "src": "/favicon.ico", 
      "dest": "/frontend/favicon.ico",
      "headers": { "cache-control": "public, max-age=0, must-revalidate" }
    },
    { 
      "src": "/css/(.*)", 
      "dest": "/frontend/css/$1",
      "headers": { "cache-control": "public, max-age=0, must-revalidate" }
    },
    { 
      "src": "/js/(.*)", 
      "dest": "/frontend/js/$1",
      "headers": { "cache-control": "public, max-age=0, must-revalidate" }
    },
    { 
      "src": "/img/(.*)", 
      "dest": "/frontend/img/$1" 
    },
    { 
      "src": "/fonts/(.*)", 
      "dest": "/frontend/fonts/$1" 
    },
    { 
      "src": "/(.*)", 
      "dest": "/frontend/$1",
      "headers": { "cache-control": "public, max-age=0, must-revalidate" }
    },
    { 
      "handle": "filesystem" 
    },
    { 
      "src": "/.*", 
      "dest": "/frontend/index.html",
      "headers": { "cache-control": "public, max-age=0, must-revalidate" }
    }
  ]
} 